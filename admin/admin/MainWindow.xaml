            <MenuItem Header="Show">
                <MenuItem Header="Doctor" Click="viewDoc" ></MenuItem>
                <MenuItem Header="Pasient" Click="viewPas"></MenuItem>
                <MenuItem Header="Obstegenya"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Doctor"></MenuItem>
                <MenuItem Header="Pasient"></MenuItem>
                <MenuItem Header="Obstegenya"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
